# This is the configuration for the Databricks Asset Bundle {{.project_name}}.

bundle:
  name: {{.project_name}}

include:
  - resources/dab/*.yml

artifacts:
  default:
    type: whl
    build: uv build --wheel

variables:
  cloud_provider:
    description: "cloud provider"
    default: {{.cloud_provider}}
  node_type_id:
    description: "node type id"
    {{- if eq .cloud_provider "aws"}}
    default: m5d.2xlarge
    {{- else if eq .cloud_provider "azure"}}
    default: Standard_D8ads_v5
    {{ end }}
  async_node_type_id:
    description: "async node type id"
    {{- if eq .cloud_provider "aws"}}
    default: m5d.4xlarge
    {{- else if eq .cloud_provider "azure"}}
    default: Standard_D16ads_v5
    {{ end }}
  num_workers:
    description: "number of workers"
    default: 40
  async_num_workers:
    description: "number of workers for async job"
    default: 1
  max_concurrent_async_runs:
    description: "max number of concurrent async job runs"
    default: 10
  zone_id:
    description: "AWS zone_id attribute"
    default: us-west-2a
  catalog:
    description: "unity catalog name"
    default: my_catalog
  schema:
    description: "schema name"
    default: my_schema
  volume:
    description: "source file volume"
    default: my_volume
  checkpoints_volume:
    description: "checkpoints volume"
    default: checkpoints
  reset_data:
    description: "reset all data tables boolean flag"
    default: "true"
  table_prefix:
    description: "output table prefix"
    default: my_project
  file_format:
    description: "input file format (extension)"
    default: pdf
  strategy:
    description: "Unstructured OSS setting: 'auto', 'hi_res', 'ocr_only'"
    default: 'auto'

targets:
  # The deployment targets. See https://docs.databricks.com/en/dev-tools/bundles/deployment-modes.html
  dev:
    mode: development
    default: true
    workspace:
      host: {{workspace_host}}

  prod:
    mode: production
    workspace:
      host: {{workspace_host}}
      root_path: /Shared/.bundle/prod/${bundle.name}
    {{- if not is_service_principal}}
    run_as:
      # This runs as {{user_name}} in production. Alternatively,
      # a service principal could be used here using service_principal_name
      user_name: {{user_name}}
    {{end -}}